<h1><%= @topic.title %></h1>

<%= paginate @posts %>

<table class="table table-bordered table-striped">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="text-nowrap">
          <span class="fw-bold"><%= link_to post.user.name, post.user %></span>
          <br>
          <img src="<%= url_for(post.user.avatar.variant(:large)) if post.user.avatar.attached? %>">
          <br>
          <span class="text-muted"><%= format_time post.remote_created_at %></span>
        </td>
        <td><%= post.content.html_safe %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
