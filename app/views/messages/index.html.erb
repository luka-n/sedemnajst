<%= paginate @messages %>

<table class="table table-striped table-sm">
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td class="text-nowrap"><%= link_to message.user.name, message.user %></td>
        <td><%= message.content %></td>
        <td class="text-nowrap"><%= format_time message.remote_created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>
